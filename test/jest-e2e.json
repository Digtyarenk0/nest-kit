{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1",
    "^app/(.*)$": "<rootDir>/../src/app/$1",
    "^database/(.*)$": "<rootDir>/../src/database/$1",
    "^config/(.*)$": "<rootDir>/../src/config/$1"
  }
}